<?import javafx.scene.chart.*?>
<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane fx:id="paneHeatmap"
            prefHeight="400.0" prefWidth="600.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="biovis.hackebeil.client.gui.output.common.CountHeatmapController">
    <children>
        <BorderPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <HBox alignment="CENTER"
                      minWidth="400" prefWidth="400"
                      minHeight="50" prefHeight="50"
                >
                    <children>
                        <Label text="Number of non-0 Entries:">
                            <HBox.margin>
                                <Insets right="15.0" />
                            </HBox.margin>
                        </Label>
                        <Label fx:id="lbNumberOfEntries" layoutX="185.0" layoutY="33.0" text="0" />
                        <CheckBox fx:id="logColorScale" mnemonicParsing="false" text="Color log-scale">
                            <HBox.margin>
                                <Insets left="15.0" />
                            </HBox.margin>
                        </CheckBox>
                    </children>
                </HBox>
            </top>
            <center>
                <ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED" 
                >
                    <content>
                        <AnchorPane fx:id="anchorHeatmap"
                        />
                    </content>
                </ScrollPane>
            </center>
        </BorderPane>
    </children>
</AnchorPane>
