<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="biovis.hackebeil.client.gui.dialog.SegmentationDialogController">
	<children>
      <VBox layoutX="25.0" layoutY="25.0">
         <children>
            <Label text="Name" />
            <TextField fx:id="tfName" />
         </children>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </VBox>
      <VBox>
         <children>
            <Label text="Path" />
            <Label fx:id="lbPath" text="placeholderPath" />
         </children>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin>
      </VBox>
		<HBox alignment="CENTER" spacing="40.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="80.0">
			<children>
				<Button fx:id="btnSave" minWidth="100.0" mnemonicParsing="false" onAction="#handleSave" text="Save" />
				<Button fx:id="btnCancel" minWidth="100.0" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
			</children>
		</HBox>
	</children>
	<padding>
		<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
	</padding>
</VBox>
